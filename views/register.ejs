    <form action="" method="POST">
        <div class="box">
            <div class="form">
                <h2 style="color: rgb(255, 174, 0);">Sign Up</h2>
                <div class="inputbox">
                    <input style="margin-top: 10px;" type="text" name="username" required="required">
                    <span style="margin-top: 10px;">username</span>
                    <i></i>
                    <div style="color: red;" class="username error"></div>
                </div>
                <div class="inputbox">
                    <input style= "margin-top: 30px" type="password" name="password" required="required">
                    <span style="margin-top: 30px;">password</span>
                    <i></i>
                    <div style="color: red;" class="password error"></div>
                </div>
                <div class="links">
                    <!-- <a href="/forgetpassword">forgot password</a>
